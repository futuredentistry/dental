{
    "extends": "airbnb",
    "plugins": [
        "react-hooks",
        "import",
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "react-hooks/rules-of-hooks": 2,
        "semi": [
            "error",
            "never"
        ],
        "react/jsx-indent": [
            0,
            0,
            {
                "ignoredNodes": [
                    "JSXElement",
                    "JSXElement > *",
                    "JSXAttribute",
                    "JSXIdentifier",
                    "JSXNamespacedName",
                    "JSXMemberExpression",
                    "SXSpreadAttribute",
                    "JSXExpressionContainer",
                    "JSXOpeningElement",
                    "JSXClosingElement",
                    "JSXText",
                    "JSXEmptyExpression",
                    "JSXSpreadChild"
                ]
            }
        ],
        "indent": 0,
        "no-tabs": 2,
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "global-require": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    },
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "dentalfront/src"
                ]
            }
        }
    }
}